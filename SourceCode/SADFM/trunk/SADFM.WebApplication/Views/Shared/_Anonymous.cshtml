@using SADFM.WebApplication.Helpers;
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>EPONS | @ViewBag.PageTitle</title>
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/fonts/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/plugins/toastr/toastr.min.css" rel="stylesheet" />
    <link href="~/Content/css/animate.css" rel="stylesheet" />
    <link href="~/Content/style.css" rel="stylesheet">
    <link href="~/Content/css/style.css" rel="stylesheet" />
    <link href="~/Content/plugins/chosen/chosen.css" rel="stylesheet" />
    <script src="~/Content/js/jquery-2.1.1.min.js"></script>
    <script src="~/Content/js/crypto.js"></script>
    <script src="~/Content/js/plugins/toastr/toastr.min.js"></script>
    @RenderSection("scripts", false)
</head>

<body class="gray-bg">

    <div class="middle-box text-center loginscreen  animated fadeInDown">
        <div>
            <div>
                <img src="~/Content/images/eponslogo.png" alt="epons" title="EPONS" width="250" /></div>
            <h3>@ViewBag.Title</h3>
            <p>@ViewBag.Message</p>
            @RenderBody()
            <p class="m-t"><small>EPONS &copy; @DateTime.Today.Year (Version @ApplicationHelper.Version())</small> </p>
        </div>
    </div>

</body>

@if (ViewBag.LoginErrorMessage != null)
{ 
    <script type="text/javascript">
        toastr.error('@ViewBag.LoginErrorMessage', 'ERROR!');
    </script>
}

</html>


