@using SADFM.Web.Shared;
@model SADFM.Data.Models.Audit
@{
    ViewBag.Title = "Audit";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Audit Log Report</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Home")">Home</a>
            </li>
            <li>
                <a>Reports</a>
            </li>
            <li class="active">
                <strong>Audit</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-12">
        &nbsp;
    </div>
    <div class="col-lg-12">
        &nbsp;
    </div>
    <div class="row">
        <div class="col-xs-3" style="margin-left: 50px">Change Type:</div>
        <div class="col-xs-5">
            <select class="selectpicker" id="TypeId" multiple data-selected-text-format="count>2">
                <option value="Insert">Insert</option>
                <option value="Update">Update</option>
            </select>
        </div>
    </div>
    <div class="col-lg-12">
        &nbsp;
    </div>
    <div class="row">
        <div class="col-xs-3" style="margin-left: 50px">
            <label for="StartDate">From Date:</label>
        </div>
        <div class="col-xs-2">
            <div class="input-group date">
                <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                <input type="text" id="StartDate" class="form-control" value="">
            </div>
        </div>
    </div>
    <div class="col-lg-12">
        &nbsp;
    </div>
    <div class="row">
        <div class="col-xs-3" style="margin-left: 50px">
            <label for="ToDate">To Date:</label>
        </div>
        <div class="col-xs-2">
            <div class="input-group date">
                <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                <input type="text" id="ToDate" class="form-control" value="">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-3" style="margin-left: 50px">
        </div>
        <div class="col-xs-2">
            <input type="button" class="btn btn-primary" value="Go" style="width: 100%" id="btn-go" />
        </div>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">

    <div class="col-lg-12">
        <div class="ibox float-e-margins">

            <table class="table table-striped table-bordered table-hover dataTables-example">
                <thead>
                    <tr>
                        <th>Table Name</th>
                        <th>Record</th>
                        <th>Field Name</th>
                        <th>Old Value</th>
                        <th>New Value</th>
                        <th>Date Changed</th>
                        <th>User</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Table Name</th>
                        <th>Record</th>
                        <th>Field Name</th>
                        <th>Old Value</th>
                        <th>New Value</th>
                        <th>Date Changed</th>
                        <th>User</th>
                    </tr>
                </tfoot>
            </table>

        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/plugins/jeditable")
    @Scripts.Render("~/plugins/dataTables")

    <script type="text/javascript">
        $(document).ready(function () {


            $('#btn-go').click(function () {
                $('.dataTables-example').dataTable().fnDestroy();
                UpdateTable();
            });

            $('.selectpicker').selectpicker({
                style: 'btn-primary',
                size: 7,
                multiple: true,
                count: 2,
                selectedTextFormat: 'values',
            });

            $('#StartDate').datepicker({
                todayBtn: "linked",
                keyboardNavigation: false,
                forceParse: false,
                calendarWeeks: true,
                autoclose: true,
                format: 'yyyy-mm-dd'
            });
            $('#ToDate').datepicker({
                todayBtn: "linked",
                keyboardNavigation: false,
                forceParse: false,
                calendarWeeks: true,
                autoclose: true,
                format: 'yyyy-mm-dd'
            });

            UpdateTable();

        });


        function UpdateTable() {
            $('.dataTables-example').dataTable({
                "processing": true,
                "serverSide": true,
                "ajax": {
                    "type": "POST",
                },
                "fnServerData": function (sSource, aoData, fnCallback, oSettings) {
                    oSettings.jqXHR = $.ajax({
                        "dataType": 'json',
                        "type": "POST",
                        "url": "/Report/AuditList",
                        "data": {
                            StartDate: $('#StartDate').val(),
                            EndDate: $('#ToDate').val(),
                            Type: $("#TypeId").val(),
                            StartIndex: $(".dataTables-example").dataTable().fnSettings()._iDisplayStart,
                            Search: $(".dataTables-example").dataTable().fnSettings().oPreviousSearch.sSearch,
                            ColumnSort: $(".dataTables-example").dataTable().fnSettings().aaSorting[0][0],
                            Direction: $(".dataTables-example").dataTable().fnSettings().aaSorting[0][1],
                            Length: $(".dataTables-example").dataTable().fnSettings()._iDisplayLength,
                            draw: $(".dataTables-example").dataTable().fnSettings().iDraw

                        },
                        "success": fnCallback,
                        "error": function (e) {

                        }
                    });
                },
                "fnDrawCallback": function( oSettings ) {
                    $('#page-wrapper').css('height', $('#DataTables_Table_0').parent().parent().parent().parent().parent().parent().css('height'))
                },
                "oLanguage": {
                    "sProcessing": "<img src='/Images/loading.gif' height='25'/>"
                },
                "order": [[5, "desc"]],
                "bAutoWidth": false,
                "columns": [
                    { "data": "TableName" },
                    { "data": "PrimaryKeyId" },
                    { "data": "FieldName" },
                    { "data": "OldValue" },
                    { "data": "NewValue" },
                    { "data": "UpdateDate" },
                    { "data": "DisplayName" }]
            });
        }

    </script>

    @Scripts.Render("~/plugins/select")
    @Scripts.Render("~/plugins/iCheck")
    @Scripts.Render("~/plugins/imagecropper")
    @Scripts.Render("~/plugins/wizardSteps")
    @Scripts.Render("~/plugins/dataPicker")
}

@section Styles {
    @Styles.Render("~/plugins/dataPickerStyles")
    @Styles.Render("~/plugins/dataTablesStyles")
    @Styles.Render("~/plugins/selectStyles")
    @Styles.Render("~/plugins/iCheckStyles")
    @Styles.Render("~/plugins/imagecropperStyles")
    @Styles.Render("~/plugins/wizardStepsStyles")
}
