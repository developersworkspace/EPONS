@model SADFM.Web.Models.ManageUserViewModel
@using SADFM.Web.Shared;
@using SADFM.Data;
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@Library.GetText("ApplicationShortName") | @Library.GetText("LoginTitle")</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/Fonts/font-awesome/css/font-awesome.css" rel="stylesheet">

    <link href="/Content/plugins/toastr/toastr.min.css" rel="stylesheet">

    <link href="~/Content/animate.css" rel="stylesheet">
    <link href="~/Content/style.css" rel="stylesheet">

    <script src="/Scripts/jquery-2.1.1.min.js"></script>
    <script src="~/Scripts/crypto.js"></script>
    <script src="/Scripts/plugins/toastr/toastr.min.js"></script>

</head>

<body class="gray-bg">

    <div class="middle-box text-center loginscreen  animated fadeInDown">
        <div>
            <div><img src="~/Content/images/eponslogo.png" alt="@Library.GetText("ApplicationLongName")" title="@Library.GetText("ApplicationLongName")" width="250" /></div>
            <h3>@Library.GetText("WelcomeTitle")</h3>
            @*<p>@Library.GetText("WelcomeMessage")</p>*@
            <form class="m-t" role="form" method="post" action="/Account/Reset" onsubmit="hdnfrom.value = 'securityquestion'" >
                <div>
                   @ViewBag.Message
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="@Library.GetText("AnswerLabel")" required="" name="securityanswer" value="">
                </div>
                <div>
                    @ViewBag.ErrorMessage
                </div>
                <button type="submit" name="questionbtn" value="questionbtn" class="btn btn-primary block full-width m-b">@Library.GetText("ForgottenPasswordQuestionBtn")</button>
                <input type="hidden" name="hdnusername" value="@ViewBag.UserName"><input type="hidden" name="Security" value="@DataAccess.Security" /><input type="hidden" name="Password" id="Password" />
                <input type="hidden" name="hdnfrom" id="from" value=""/>
                <input type="hidden" name="multiple" value='@ViewBag.MultipleUsers' />
                <div>
                    @Library.GetText("ForgottenPasswordMsg")
                </div>
            </form>

            <p class="m-t"> <small>@Library.GetText("ApplicationLongName") &copy; @DateTime.Today.Year (Version @Utilities.Version)</small> </p>
        </div>
    </div>

</body>

@if (ViewBag.LoginErrorMessage != null)
{
    <script type="text/javascript">
        toastr.error('@ViewBag.LoginErrorMessage', 'ERROR!');
    </script>
}

</html>


