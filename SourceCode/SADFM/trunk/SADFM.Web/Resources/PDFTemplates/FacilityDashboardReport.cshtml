        </td>
        <td width="50%" style="vertical-align: top;">
            @Model.AverageLOSWeek2
        </td>
    </tr>
    <tr>
        <td width="50%" style="vertical-align: top;">
            LOS 15 - 21 days
            <br />
            3 Weeks
        </td>
        <td width="50%" style="vertical-align: top;">
            @Model.AverageLOSWeek3
        </td>
    </tr>
    <tr>
        <td width="50%" style="vertical-align: top;">
            LOS 22 - 28 days
            <br />
            4 Weeks
        </td>
        <td width="50%" style="vertical-align: top;">
            @Model.AverageLOSWeek4
        </td>
    </tr>
    <tr>
        <td width="50%" style="vertical-align: top;">
            LOS > 28 days
            <br />
            More than a month
        </td>
        <td width="50%" style="vertical-align: top;">
            @Model.AverageLOSMoreThanAMonth
        </td>
    </tr>
</table>

<br />
<div style="page-break-before:always">&nbsp;</div>
