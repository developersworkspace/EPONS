@model SADFM.Infrastructure.Models.FacilityDashboardReport
@{
    Layout = null;
}
<style>
    * {
        font-size: small
    }
</style>
<meta http-equiv="Content-Type" content="text/html;charset=utf-8" />
<table width="100%">
    <tr>
        <td width="20%">
            <img src="@Model.FacilityImage" width="100%" />
        </td>
        <td width="2%"></td>
        <td width="50%">
            <h4>
               @Model.FacilityName
                <br />
                Facility Dashboard Report
                <br />
                @Model.StartDate.ToString("dd MMM yyyy") - @Model.EndDate.ToString("dd MMM yyyy")
            </h4>
        </td>
    </tr>
</table>
<br />
<h5>Admission and Discharge Detail</h5>
<table width="100%">
        <tr>
            <td width="50%" style="vertical-align: top;">
                Active Patients for Period
            </td>
            <td width="50%" style="vertical-align: top;">
               @Model.ActivePatients
            </td>
        </tr>
    <tr>
        <td width="50%" style="vertical-align: top;">
            Admitted
        </td>
        <td width="50%" style="vertical-align: top;">
            @Model.Admitted
        </td>
    </tr>
    <tr>
        <td width="50%" style="vertical-align: top;">
            Discharged
        </td>
        <td width="50%" style="vertical-align: top;">
            @Model.Discharged
        </td>
    </tr>
    <tr>
        <td width="50%" style="vertical-align: top;">
            Deaths
        </td>
        <td width="50%" style="vertical-align: top;">
            @Model.Deaths
        </td>
    </tr>
</table>

<br />
<h5>Length of Stay Detail</h5>
<table width="100%">
    <tr>
        <td width="50%" style="vertical-align: top;">
            Average Length of Stay
        </td>
        <td width="50%" style="vertical-align: top;">
            @Model.AverageLOS
        </td>
    </tr>
    <tr>
        <td width="50%" style="vertical-align: top;">
            LOS 1 - 7 days
            <br />
            1 Week
        </td>
        <td width="50%" style="vertical-align: top;">
            @Model.AverageLOSWeek1
        </td>
    </tr>
    <tr>
        <td width="50%" style="vertical-align: top;">
            LOS 8 - 14 days
            <br />
