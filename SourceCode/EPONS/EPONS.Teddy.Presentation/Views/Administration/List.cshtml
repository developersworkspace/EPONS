@model EPONS.Teddy.Presentation.ViewObjects.Administration.List
@{ 
    ViewBag.Title = "List";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-md-10">
        <h2>User List</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("","")">Home</a>
            </li>
            <li>
                <a>User</a>
            </li>
            <li class="active">
                <strong>List</strong>
            </li>
        </ol>
    </div>
    <div class="col-md-2">

    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-md-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>List of Users</h5>
                    <div class="ibox-tools">
                        <button class="btn btn-info btn-sm" data-toggle="modal" data-target="#createUserModal">Create User</button>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="table-responsive">
                        <form role="search" action="@Url.Action("List","Administration")" method="get">
                            <div class="input-group">
                                <input type="text" placeholder="Search for user..." class="form-control" name="query" id="query" value="@Request["query"]">
                                <span class="input-group-btn">
                                    <button class="btn btn-secondary" type="submit">Search</button>
                                </span>
                            </div>
                        </form>
                        @Html.Partial("_ListUsers", Model.Users)
                        @Html.Partial("_Pagination", Model.Pagination)
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@Html.Partial("_CreateUserModal", new EPONS.Teddy.Application.Entities.User())