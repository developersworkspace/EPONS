@model EPONS.Teddy.Presentation.ViewObjects.Modals.AddMeasurementTool

<div id="addMeasurementToolModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Add Measurement Tool</h4>
            </div>
            @using (Html.BeginForm("AddMeasurementTool", "Facility"))
            {
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-3">
                            @Html.DisplayNameFor(x => x.MeasurementToolId)
                        </div>
                        <div class="col-md-9">
                            @Html.DropDownListFor(x => x.MeasurementToolId, Model.MeasurementTools, "", new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.MeasurementToolId, null, new { @class = "text-danger" })
                        </div>
                    </div>
                    @Html.HiddenFor(x => x.FacilityId)
                    @Html.AntiForgeryToken()
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Add</button>
                </div>
            }
        </div>

    </div>
</div>


<script>
    function showAddMeasurementToolModal() {
        $('#addMeasurementToolModal').modal('show');
    }
</script>
