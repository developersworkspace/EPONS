@model EPONS.Teddy.Application.Entities.Patient
@{
    Layout = null;
}

@Html.DropDownListFor(x => x.CityId, Model.Cities.Select(x => new SelectListItem()
{
    Text = x.Name,
    Value = x.Id.ToString(),
    Selected = x.Id.ToString() == Model.CityId.ToString()

}), "", new { @class = "form-control" })